<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/blueback"
    tools:context="com.sbm.shubhamchandrakar.autoresponse.SecondAct">

    <Button
        android:text="Save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:id="@+id/save_button"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/editText_sms"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText_sms"
        android:fadeScrollbars="true"
        android:scrollbars="vertical"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/profile_btn"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/profile_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pr_switch"
        android:layout_marginTop="17dp"
        android:background="@drawable/button_selector"
        android:text="Button" />

    <Switch
        android:id="@+id/pr_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/switchclr"
        android:textColor="#ffffff"
        android:text="Activate This Profile"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold|italic" />

</RelativeLayout>
